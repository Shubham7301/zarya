rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Merchant images - only authenticated merchants can upload to their own folder
    match /merchants/{merchantId}/{allPaths=**} {
      allow read: if true; // Anyone can read merchant images
      allow write: if request.auth != null && request.auth.uid == merchantId;
    }
    
    // Service images - only the merchant who owns the service can upload
    match /services/{serviceId}/{allPaths=**} {
      allow read: if true; // Anyone can read service images
      allow write: if request.auth != null && 
        request.auth.uid == resource.metadata.merchantId;
    }
    
    // Profile pictures
    match /profiles/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
